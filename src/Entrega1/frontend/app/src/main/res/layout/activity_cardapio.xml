<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CardapioAlunosActivity">

    <!-- Header com Imagem -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="0dp"
        android:layout_height="225dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_tia"
        android:contentDescription="Header do cardápio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Overlay escuro no header -->
    <View
        android:layout_width="0dp"
        android:layout_height="225dp"
        android:background="#80000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botão Voltar -->
    <TextView
        android:id="@+id/botaoVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:text="←"
        android:textSize="24sp"
        android:textColor="#F5F5DB"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:contentDescription="Voltar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Título "Cardápio" -->
    <TextView
        android:id="@+id/tituloPagina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="60dp"
        android:text="Cardápio"
        android:textColor="#F5F5DB"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>



    <!-- Barra de Pesquisa -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="-20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#F5F5F5"
        app:layout_constraintTop_toBottomOf="@id/headerImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="6dp"
            android:paddingEnd="6dp">

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="🔍"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginStart="6dp"/>

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search"
                android:textColorHint="#BDBDBD"
                android:textColor="#000000"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:inputType="text"
                android:imeOptions="actionSearch"/>

            <TextView
                android:id="@+id/filterIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="⚙️"
                android:textSize="18sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Filtros de Categoria -->
    <HorizontalScrollView
        android:id="@+id/categoriasScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/searchCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <Button
                android:id="@+id/btnLanches"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="78dp"
                android:layout_height="27dp"
                android:text="Lanches"
                android:textColor="#9C5827"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="4dp"
                app:strokeColor="#9C5827"
                app:strokeWidth="1dp"
                app:cornerRadius="10dp"
                android:layout_marginEnd="7dp"/>

            <Button
                android:id="@+id/btnBebidas"
                android:layout_width="78dp"
                android:layout_height="27dp"
                android:text="Bebidas"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:backgroundTint="#9C5827"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="4dp"
                app:cornerRadius="10dp"
                android:layout_marginEnd="7dp"/>

            <Button
                android:id="@+id/btnDoces"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="78dp"
                android:layout_height="27dp"
                android:text="Doces"
                android:textColor="#9C5827"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="4dp"
                app:strokeColor="#9C5827"
                app:strokeWidth="1dp"
                app:cornerRadius="10dp"
                android:layout_marginEnd="7dp"/>

            <Button
                android:id="@+id/btnMarmitas"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="78dp"
                android:layout_height="27dp"
                android:text="Marmitas"
                android:textColor="#9C5827"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="4dp"
                app:strokeColor="#9C5827"
                app:strokeWidth="1dp"
                app:cornerRadius="10dp"/>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="8dp"
        android:background="#EFEFEF"
        app:layout_constraintTop_toBottomOf="@id/categoriasScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Lista de Produtos em Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProdutos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>