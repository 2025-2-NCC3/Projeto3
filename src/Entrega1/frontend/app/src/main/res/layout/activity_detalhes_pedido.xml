<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DetalhesPedidoActivity">

    <!-- Header com Imagem e Overlay -->
    <FrameLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="196dp"
        android:background="@drawable/rounded_bottom_shape"
        android:clipChildren="true"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Fundo verde -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_green"/>

        <!-- Logo transparente -->
        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="228dp"
            android:layout_height="247dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-20dp"
            android:alpha="0.2"
            android:contentDescription="Header"
            android:scaleType="centerInside"
            android:src="@drawable/logo_tia" />

        <!-- Botão Voltar -->
        <ImageButton
            android:id="@+id/btn_voltar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Voltar"
            app:tint="#F5F5DB"
            android:padding="12dp"/>

        <!-- Título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="28dp"
            android:layout_marginTop="90dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalhes do Pedido"
                android:textColor="#F5F5DB"
                android:textSize="24sp"
                android:fontFamily="@font/poppins_bold"
                android:letterSpacing="-0.01"/>

            <TextView
                android:id="@+id/tv_pedido_codigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#ORD-0021"
                android:textColor="#F5F5DB"
                android:textSize="24sp"
                android:fontFamily="@font/poppins_bold"
                android:letterSpacing="-0.01"/>

        </LinearLayout>

    </FrameLayout>

    <!-- ScrollView com conteúdo -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Informações do Pedido -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- Nº do Pedido -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nº do Pedido"
                        android:textColor="#6E6B65"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"/>

                    <TextView
                        android:id="@+id/tv_pedido_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#ORD-0021"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_semibold"/>

                </LinearLayout>

                <!-- Data e Hora -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Data e Hora"
                        android:textColor="#6E6B65"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"/>

                    <TextView
                        android:id="@+id/tv_data_pedido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23/10/2025 - 14:20"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"/>

                </LinearLayout>

                <!-- Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Status"
                        android:textColor="#6E6B65"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"/>

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PENDENTE"
                        android:textColor="#C97B5A"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_semibold"/>

                </LinearLayout>

                <!-- Cliente -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cliente"
                        android:textColor="#6E6B65"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"/>

                    <TextView
                        android:id="@+id/tv_cliente_nome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jane Doe"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Título Itens do Pedido -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Itens do Pedido"
                android:textColor="#000000"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:letterSpacing="-0.01"
                android:layout_marginBottom="12dp"/>

            <!-- Card com lista de itens -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F5F5F5"
                app:strokeWidth="0dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_itens_pedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:nestedScrollingEnabled="false"/>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card de Pagamento -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#A8C3A0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MÉTODOS DE PAGAMENTO"
                        android:textColor="#F5F5DB"
                        android:textSize="11sp"
                        android:fontFamily="@font/poppins_bold"
                        android:letterSpacing="-0.01"/>

                    <TextView
                        android:id="@+id/tv_metodo_pagamento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PIX"
                        android:textColor="#F5F5DB"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STATUS DE PAGAMENTO"
                        android:textColor="#F5F5DB"
                        android:textSize="11sp"
                        android:fontFamily="@font/poppins_bold"
                        android:letterSpacing="-0.01"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_status_pagamento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PAGO"
                        android:textColor="#3D7A4C"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Resumo de Valores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- Desconto -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Desconto"
                        android:textColor="#6E6B65"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"/>

                    <TextView
                        android:id="@+id/tv_desconto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-R$ 0,00"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"/>

                </LinearLayout>

                <!-- Total -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total"
                        android:textColor="#6E6B65"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"/>

                    <TextView
                        android:id="@+id/tv_total_pedido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R$ 320,00"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Botões -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!-- Botão Cancelar Pedido -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cancelar_pedido"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="CANCELAR PEDIDO"
                    android:textColor="#8B4A3D"
                    android:textSize="11sp"
                    android:fontFamily="@font/poppins_bold"
                    android:letterSpacing="-0.01"
                    app:strokeColor="#8B4A3D"
                    app:strokeWidth="2dp"
                    app:cornerRadius="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>