<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="153dp"
    android:layout_height="143dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="12dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Imagem do Produto -->
        <ImageView
            android:id="@+id/imgProduto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/coxinha_exemplo"
            android:contentDescription="Imagem do produto" />

        <!-- Gradiente sobre a imagem -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/product_gradient" />



        <!-- Informações do Produto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <!-- Nome do Produto -->
            <TextView
                android:id="@+id/txtNomeProduto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iced Latte"
                android:textColor="#F5F5DB"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Container do Preço e Botão Adicionar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <!-- Preço -->
                <TextView
                    android:id="@+id/txtPrecoProduto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="R$ 150.00"
                    android:textColor="#F5F5DB"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold" />

                <!-- Botão Adicionar ao Carrinho -->
                <ImageView
                    android:id="@+id/btnAdicionar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_add_circle"
                    app:tint="#F5F5DB"
                    android:contentDescription="Adicionar ao carrinho"
                    android:clickable="true"
                    android:focusable="true" />

            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>