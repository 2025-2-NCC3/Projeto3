<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#235135"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- Imagem no Topo -->
        <ImageView
            android:id="@+id/imagemLogin"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="32dp"
            android:scaleType="centerInside"
            android:src="@drawable/logo_tia"
            android:contentDescription="Ilustração de login"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Texto de Boas-vindas -->
        <LinearLayout
            android:id="@+id/welcomeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/imagemLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bem-vindo de volta!"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faça login na sua conta"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <!-- Card de Login -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/welcomeLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp"
                android:paddingTop="30dp"
                android:paddingBottom="24dp">

                <!-- Campo Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:layout_marginTop="2dp"
                        android:hint="seu@email.com"
                        android:textColorHint="#A0AFAFAF"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionNext"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/input_border"/>

                </LinearLayout>

                <!-- Campo Senha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="9dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Senha"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:layout_marginTop="2dp">

                        <EditText
                            android:id="@+id/editTextPassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Sua senha"
                            android:textColorHint="#A0AFAFAF"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="textPassword"
                            android:imeOptions="actionDone"
                            android:paddingStart="10dp"
                            android:paddingEnd="40dp"
                            android:background="@drawable/input_border"/>

                        <!-- Ícone de mostrar/ocultar senha -->
                        <ImageView
                            android:id="@+id/togglePassword"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_eye_off"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="Mostrar/Ocultar senha"
                            android:background="?attr/selectableItemBackgroundBorderless"/>

                    </RelativeLayout>

                </LinearLayout>

                <!-- Esqueceu a senha -->
                <TextView
                    android:id="@+id/forgotPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="Esqueceu sua senha?"
                    android:textColor="#235135"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="end"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="4dp"/>

                <!-- Container do Botão e Loading -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp">

                    <!-- Botão Entrar -->
                    <Button
                        android:id="@+id/buttonLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Entrar"
                        android:textColor="#F5F5DB"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_bold"
                        android:background="@drawable/button_login_background"
                        android:paddingVertical="12dp"/>

                    <!-- ProgressBar -->
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:indeterminateTint="#F5F5DB"/>

                </FrameLayout>

                <!-- Link Cadastro -->
                <TextView
                    android:id="@+id/textViewRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="Não tem uma conta? Cadastre-se"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="4dp"
                    android:letterSpacing="-0.01"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>