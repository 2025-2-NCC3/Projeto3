<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CriarPedidoActivity">

    <!-- Header com Imagem e Overlay -->
    <FrameLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="@drawable/rounded_bottom_shape"
        android:clipChildren="true"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Fundo verde -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_green"/>

        <!-- Logo transparente -->
        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="228dp"
            android:layout_height="247dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-20dp"
            android:alpha="0.2"
            android:contentDescription="Header"
            android:scaleType="centerInside"
            android:src="@drawable/logo_tia" />

        <!-- Botão Voltar -->
        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Voltar"
            app:tint="@color/text_beige"
            android:padding="12dp"/>

        <!-- Título -->
        <TextView
            android:id="@+id/tituloPagina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="110dp"
            android:text="Finalizar Pedido"
            android:textColor="@color/text_beige"
            android:textSize="26sp"
            android:fontFamily="@font/poppins_bold"
            android:letterSpacing="-0.01"/>

    </FrameLayout>

    <!-- ScrollView com conteúdo -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="8dp">

            <!-- Card de Dados do Cliente -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Título do Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="@color/brown"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dados do Cliente"
                            android:textColor="@color/dark_green"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_bold"
                            android:letterSpacing="-0.01"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nome:"
                            android:textColor="@color/text_hint"
                            android:textSize="13sp"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/tvNomeCliente"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cliente Cantina"
                            android:textColor="@color/text_dark"
                            android:textSize="15sp"
                            android:fontFamily="@font/poppins_semibold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID:"
                            android:textColor="@color/text_hint"
                            android:textSize="13sp"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/tvIdCliente"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2023001"
                            android:textColor="@color/text_medium"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card de Resumo do Pedido -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Título do Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="@color/brown"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Resumo do Carrinho"
                            android:textColor="@color/dark_green"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_bold"
                            android:letterSpacing="-0.01"/>

                    </LinearLayout>

                    <!-- Quantidade de Itens -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Itens no carrinho"
                            android:textColor="@color/text_medium"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium" />

                        <TextView
                            android:id="@+id/tvQuantidadeItens"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/text_dark"
                            android:textSize="15sp"
                            android:fontFamily="@font/poppins_bold" />

                    </LinearLayout>

                    <!-- Lista de produtos -->
                    <TextView
                        android:id="@+id/tvListaProdutos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Café x2\n• Coxinha x3"
                        android:textColor="@color/text_medium"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/card_stroke"
                        android:layout_marginVertical="4dp" />

                    <!-- Valor Total DESTACADO -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp"
                        android:background="@drawable/rounded_bg_light_green">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total a pagar"
                            android:textColor="@color/dark_green"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_bold" />

                        <TextView
                            android:id="@+id/tvValorTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 0,00"
                            android:textColor="@color/dark_green"
                            android:textSize="26sp"
                            android:fontFamily="@font/poppins_bold"
                            android:letterSpacing="-0.01"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card de Observações -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Título do Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="@color/brown"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Observações"
                            android:textColor="@color/dark_green"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_bold"
                            android:letterSpacing="-0.01"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Opcional"
                            android:textColor="@color/text_hint"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_regular"/>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/etObservacoes"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="Ex: Sem cebola, sem maionese..."
                        android:textColorHint="@color/icon_gray"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="top|start"
                        android:padding="14dp"
                        android:background="@drawable/edittext_background"
                        android:inputType="textMultiLine"
                        android:maxLines="4" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card de Status (inicialmente oculto) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/button_green">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:gravity="center_vertical">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="14dp"
                        android:indeterminateTint="@color/text_beige"/>

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Criando pedido..."
                        android:textColor="@color/text_beige"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins_semibold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Botão Confirmar Pedido -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCriarPedido"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="CONFIRMAR PEDIDO"
                android:textColor="@color/text_beige"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_bold"
                android:letterSpacing="0.03"
                app:backgroundTint="@color/button_green"
                app:cornerRadius="12dp"
                app:elevation="4dp"
                android:layout_marginBottom="12dp" />

            <!-- Informações Adicionais -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="14dp"
                android:background="@drawable/rounded_bg_light_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ℹ️"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Após confirmar, você receberá um código para acompanhamento do pedido."
                    android:textColor="@color/text_medium"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:lineSpacingExtra="2dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>