<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AdminPedidosActivity">

    <!-- Header com Imagem e Overlay -->
    <FrameLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="196dp"
        android:background="@drawable/rounded_bottom_shape"
        android:clipChildren="true"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Fundo verde -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_green"/>

        <!-- Logo transparente -->
        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="228dp"
            android:layout_height="247dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-20dp"
            android:alpha="0.2"
            android:contentDescription="Header"
            android:scaleType="centerInside"
            android:src="@drawable/logo_tia" />

        <!-- BotÃ£o Voltar -->
        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Voltar"
            app:tint="@color/text_beige"
            android:padding="12dp"/>

        <!-- TÃ­tulo -->
        <TextView
            android:id="@+id/tituloPagina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="90dp"
            android:text="Gerenciar Pedidos"
            android:textColor="@color/text_beige"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold"
            android:letterSpacing="-0.01"/>

        <!-- Barra de Pesquisa dentro do Header -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/searchCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="140dp"
            android:layout_gravity="top"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/off_white"
            app:strokeWidth="1dp"
            app:strokeColor="@color/brown">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:minHeight="39dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="Buscar"/>

                <EditText
                    android:id="@+id/editBusca"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Buscar pedido..."
                    android:fontFamily="@font/poppins_regular"
                    android:textColorHint="@color/icon_gray"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:importantForAutofill="no"/>

                <ImageButton
                    android:id="@+id/btnLimparBusca"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_close"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Limpar busca"
                    android:visibility="gone"
                    app:tint="@color/empty_state"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

    <!-- Filtros -->
    <HorizontalScrollView
        android:id="@+id/filtrosScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:fillViewport="false"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <!-- BotÃ£o Filtro Status -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFiltroStatus"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="ðŸŽ¯ Todos"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/brown"
                android:textSize="13sp"
                android:textAllCaps="false"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:strokeColor="@color/brown"
                app:strokeWidth="1.5dp"
                app:cornerRadius="10dp"
                android:layout_marginEnd="8dp"/>

            <!-- BotÃ£o Filtro Data -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFiltroData"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="ðŸ“… Data"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/brown"
                android:textSize="13sp"
                android:textAllCaps="false"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:strokeColor="@color/brown"
                app:strokeWidth="1.5dp"
                app:cornerRadius="10dp"
                android:layout_marginEnd="8dp"/>

            <!-- BotÃ£o OrdenaÃ§Ã£o -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOrdenacao"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="ðŸ“Š Ordenar"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/brown"
                android:textSize="13sp"
                android:textAllCaps="false"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:strokeColor="@color/brown"
                app:strokeWidth="1.5dp"
                app:cornerRadius="10dp"/>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        android:background="@color/divider_light"
        app:layout_constraintTop_toBottomOf="@id/filtrosScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBarCarregando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/dark_green"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- SwipeRefreshLayout com RecyclerView -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Lista de Pedidos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPedidos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_pedido_admin"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Layout quando nÃ£o hÃ¡ pedidos -->
    <LinearLayout
        android:id="@+id/layoutPedidosVazio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”"
            android:textSize="64sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nenhum pedido encontrado"
            android:textColor="@color/empty_state"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:textAlignment="center"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tente ajustar os filtros ou busca"
            android:textColor="@color/icon_gray"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="center"
            android:gravity="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>