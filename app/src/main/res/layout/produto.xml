<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/boxProduto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
android:layout_marginTop="10dp"
android:orientation="horizontal"
>

<ImageView
    android:id="@+id/imagemProduto"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:contentDescription="exemplo"
    android:src="@drawable/coxinha_exemplo"
    />

<LinearLayout
    android:id="@+id/infoProduto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tituloProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="exemploNome"
        android:textSize="28sp"
        />

    <TextView
        android:id="@+id/precoProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="exemplo"
        android:textSize="28sp"
        />
</LinearLayout>
</LinearLayout>