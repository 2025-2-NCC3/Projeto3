<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="20dp"
    tools:context=".InfoProdutoActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideEsquerda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideDireita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideTopo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <!-- Botão Voltar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/botaoVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textColor="@color/white"
        app:backgroundTint="@color/dark_green"
        app:layout_constraintStart_toEndOf="@id/guideEsquerda"
        app:layout_constraintTop_toBottomOf="@+id/guideTopo" />

    <!-- Card do Produto -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardProduto"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/light_beige"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toStartOf="@id/guideDireita"
        app:layout_constraintStart_toEndOf="@id/guideEsquerda"
        app:layout_constraintTop_toBottomOf="@id/botaoVoltar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Imagem do Produto -->
            <ImageView
                android:id="@+id/imagemProduto"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/image_placeholder"
                android:contentDescription="Foto do delicioso produto"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/coxinha_exemplo" />

            <!-- Informações do Produto -->
            <TextView
                android:id="@+id/nomeProduto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Nome do Produto"
                android:textColor="@color/dark_green"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/precoProduto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="R$ 0,00"
                android:textColor="@color/medium_green"
                android:textSize="22sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_green"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/descricaoProduto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição do Produto blablablablabala"
                android:textColor="@color/dark_green"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Botão Comprar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/botaoComprar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/dark_green"
        android:text="Adicionar ao Carrinho"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_shopping_cart"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideDireita"
        app:layout_constraintStart_toEndOf="@id/guideEsquerda"
        app:layout_constraintTop_toBottomOf="@id/cardProduto" />

</androidx.constraintlayout.widget.ConstraintLayout>