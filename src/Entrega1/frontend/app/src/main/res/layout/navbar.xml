<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/dark_brown"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:gravity="center">

            <!-- Card치pio -->
            <FrameLayout
                android:id="@+id/navCardapio"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iconCardapio"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_restaurant"
                    app:tint="@color/text_beige"
                    android:contentDescription="Card치pio" />

                <View
                    android:id="@+id/indicatorCardapio"
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/nav_indicator"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Hist칩rico -->
            <FrameLayout
                android:id="@+id/navHistorico"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iconHistorico"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_history"
                    app:tint="@color/text_beige"
                    android:contentDescription="Hist칩rico" />

                <View
                    android:id="@+id/indicatorHistorico"
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/nav_indicator"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Carrinho -->
            <FrameLayout
                android:id="@+id/navCarrinho"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iconCarrinho"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_shopping_cart"
                    app:tint="@color/text_beige"
                    android:contentDescription="Carrinho" />

                <View
                    android:id="@+id/indicatorCarrinho"
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/nav_indicator"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Perfil -->
            <FrameLayout
                android:id="@+id/navPerfil"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iconPerfil"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person"
                    app:tint="@color/text_beige"
                    android:contentDescription="Perfil" />

                <View
                    android:id="@+id/indicatorPerfil"
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/nav_indicator"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>