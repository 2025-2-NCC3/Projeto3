    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- Para desenvolvimento, vocÃª pode adicionar um domÃ­nio especÃ­fico -->
