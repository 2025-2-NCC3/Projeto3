<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CriarPedidoActivity">

    <!-- Header com Imagem e Overlay -->
    <FrameLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="196dp"
        android:background="@drawable/rounded_bottom_shape"
        android:clipChildren="true"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Fundo verde -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_green"/>

        <!-- Logo transparente -->
        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="228dp"
            android:layout_height="247dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-20dp"
            android:alpha="0.2"
            android:contentDescription="Header"
            android:scaleType="centerInside"
            android:src="@drawable/logo_tia" />

        <!-- BotÃ£o Voltar -->
        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Voltar"
            app:tint="#F5F5DB"
            android:padding="12dp"/>

        <!-- TÃ­tulo -->
        <TextView
            android:id="@+id/tituloPagina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="130dp"
            android:text="Finalizar Pedido"
            android:textColor="#F5F5DB"
            android:textSize="26sp"
            android:fontFamily="@font/poppins_bold"
            android:letterSpacing="-0.01"/>

    </FrameLayout>

    <!-- ScrollView com conteÃºdo -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Card de Dados do Cliente -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#F5F5F5"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ Dados do Cliente"
                        android:textColor="#235135"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nome:"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/tvNomeCliente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cliente Cantina"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID:"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/tvIdCliente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2023001"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card de Resumo do Pedido -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#F5F5F5"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ›’ Resumo do Carrinho"
                        android:textColor="#235135"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginBottom="12dp" />

                    <!-- Quantidade de Itens -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Quantidade de itens:"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_regular" />

                        <TextView
                            android:id="@+id/tvQuantidadeItens"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_bold" />

                    </LinearLayout>

                    <!-- Lista de produtos -->
                    <TextView
                        android:id="@+id/tvListaProdutos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ CafÃ© x2\nâ€¢ Coxinha x3"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD"
                        android:layout_marginVertical="8dp" />

                    <!-- Valor Total -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Valor Total:"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_bold" />

                        <TextView
                            android:id="@+id/tvValorTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 0,00"
                            android:textColor="#235135"
                            android:textSize="22sp"
                            android:fontFamily="@font/poppins_bold" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card de ObservaÃ§Ãµes -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#F5F5F5"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¬ ObservaÃ§Ãµes (Opcional)"
                        android:textColor="#235135"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etObservacoes"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="Ex: Sem cebola, sem maionese..."
                        android:textColorHint="#999999"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="top|start"
                        android:padding="12dp"
                        android:background="@drawable/edittext_background"
                        android:inputType="textMultiLine"
                        android:maxLines="4" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card de Status (inicialmente oculto) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#E8F5E9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:indeterminateTint="#235135"/>

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Criando pedido..."
                        android:textColor="#235135"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- BotÃ£o Confirmar Pedido -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCriarPedido"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="CONFIRMAR PEDIDO"
                android:textColor="#F5F5DB"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_bold"
                android:letterSpacing="-0.01"
                app:backgroundTint="#3D7A4C"
                app:cornerRadius="10dp"
                app:elevation="4dp"
                android:layout_marginBottom="16dp" />

            <!-- InformaÃ§Ãµes Adicionais -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â„¹ï¸ ApÃ³s confirmar o pedido, vocÃª receberÃ¡ um cÃ³digo para acompanhamento."
                android:textColor="#666666"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:padding="8dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>