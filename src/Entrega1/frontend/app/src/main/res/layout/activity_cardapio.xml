<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CardapioAlunosActivity">

    <!-- Header com Imagem e Overlay -->
    <FrameLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="225dp"
        android:background="@drawable/rounded_bottom_shape"
        android:clipChildren="true"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Fundo verde -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_green"/>

        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="228dp"
            android:layout_height="247dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-20dp"
            android:alpha="0.2"
            android:contentDescription="Header do cardÃ¡pio"
            android:scaleType="centerInside"
            android:src="@drawable/logo_tia" />

        <!-- BotÃ£o Voltar -->
        <ImageButton
            android:id="@+id/botaoVoltar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Voltar"
            app:tint="@color/text_beige"
            android:padding="12dp"/>

        <!-- Container dos botÃµes do topo direito -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <!-- BotÃ£o Meus Pedidos -->
            <Button
                android:id="@+id/btnMeusPedidos"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="ðŸ“‹"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:minWidth="0dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textColor="@color/text_beige"
                android:layout_marginEnd="8dp"/>

            <!-- BotÃ£o Carrinho -->
            <Button
                android:id="@+id/btnCarrinho"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="ðŸ›’"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:minWidth="0dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textColor="@color/text_beige"/>

        </LinearLayout>

        <!-- TÃ­tulo "CardÃ¡pio" -->
        <TextView
            android:id="@+id/tituloPagina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="100dp"
            android:text="CardÃ¡pio"
            android:textColor="@color/text_beige"
            android:textSize="26sp"
            android:fontFamily="@font/poppins_bold"/>

        <!-- Barra de Pesquisa dentro do Header -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/searchCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="155dp"
            android:layout_gravity="top"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/off_white"
            app:strokeWidth="1dp"
            app:strokeColor="@color/brown">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:minHeight="39dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="Buscar"/>

                <EditText
                    android:id="@+id/searchInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Buscar..."
                    android:fontFamily="@font/poppins_regular"
                    android:textColorHint="@color/icon_gray"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:importantForAutofill="no"/>

                <ImageButton
                    android:id="@+id/btnLimparBusca"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_close"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Limpar busca"
                    android:visibility="gone"
                    app:tint="@color/empty_state"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

    <!-- Filtros de Categoria -->
    <HorizontalScrollView
        android:id="@+id/categoriasScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:fillViewport="false"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/categoriasContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!-- BotÃ£o Todos -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTodos"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Todos"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                app:backgroundTint="@color/brown"
                app:cornerRadius="10dp"
                android:elevation="0dp"
                android:layout_marginEnd="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLanches"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Lanches"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/brown"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                app:strokeColor="@color/brown"
                app:strokeWidth="1.5dp"
                app:cornerRadius="10dp"
                android:layout_marginEnd="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBebidas"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Bebidas"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/brown"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                app:strokeColor="@color/brown"
                app:strokeWidth="1.5dp"
                app:cornerRadius="10dp"
                android:layout_marginEnd="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDoces"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Doces"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/brown"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                app:strokeColor="@color/brown"
                app:strokeWidth="1.5dp"
                app:cornerRadius="10dp"
                android:layout_marginEnd="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMarmitas"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Marmitas"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/brown"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                app:strokeColor="@color/brown"
                app:strokeWidth="1.5dp"
                app:cornerRadius="10dp"/>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="12dp"
        android:background="@color/divider_light"
        app:layout_constraintTop_toBottomOf="@id/categoriasScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- SwipeRefreshLayout envolvendo o RecyclerView -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toTopOf="@id/includeNavbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Lista de Produtos em Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewProdutos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/produto"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Navbar fixada na parte inferior -->
    <include
        android:id="@+id/includeNavbar"
        layout="@layout/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>