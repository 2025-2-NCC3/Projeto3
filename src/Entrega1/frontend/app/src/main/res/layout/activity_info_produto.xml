<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".InfoProdutoActivity">

    <!-- Imagem do Produto com Gradiente -->
    <FrameLayout
        android:id="@+id/imagemContainer"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/rounded_bottom_shape"
        android:clipChildren="true"
        android:clipToOutline="true">

        <ImageView
            android:id="@+id/imagemProduto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/coxinha_exemplo"
            android:contentDescription="Imagem do produto"/>

        <!-- Gradiente sobre a imagem -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/product_gradient"/>

        <!-- Botão Voltar -->
        <ImageButton
            android:id="@+id/botaoVoltar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Voltar"
            app:tint="@color/text_beige"
            android:padding="12dp"/>

    </FrameLayout>

    <!-- Card com informações do produto -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="310dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card Principal -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Nome do Produto -->
                    <TextView
                        android:id="@+id/nomeProduto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Coxinha de Frango"
                        android:textColor="@color/brown"
                        android:textSize="24sp"
                        android:fontFamily="@font/poppins_bold"
                        android:letterSpacing="-0.01"/>

                    <!-- Container Categoria -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/categoriaProduto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LANCHES"
                            android:textColor="@color/brown"
                            android:textSize="10sp"
                            android:fontFamily="@font/poppins_semibold"
                            android:letterSpacing="0.05"
                            android:background="@drawable/category_badge"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"/>



                    </LinearLayout>

                    <!-- Preço -->
                    <TextView
                        android:id="@+id/precoProduto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="R$ 6,00"
                        android:textColor="@color/dark_green"
                        android:textSize="28sp"
                        android:fontFamily="@font/poppins_bold"
                        android:letterSpacing="-0.01"/>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/divider_gray"/>

                    <!-- Descrição -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descrição"
                        android:textColor="@color/dark_green"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:letterSpacing="-0.01"/>

                    <TextView
                        android:id="@+id/descricaoProduto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Deliciosa coxinha de frango temperada com catupiry, massa crocante e recheio suculento. Perfeita para o seu lanche!"
                        android:textColor="@color/text_medium"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingExtra="4dp"/>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/divider_gray"/>

                    <!-- Quantidade -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quantidade"
                        android:textColor="@color/dark_green"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:letterSpacing="-0.01"/>

                    <!-- Controle de Quantidade -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageButton
                            android:id="@+id/btnDiminuir"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_remove_circle"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Diminuir quantidade"
                            app:tint="@color/brown"
                            android:scaleType="fitCenter"/>

                        <TextView
                            android:id="@+id/txtQuantidade"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="1"
                            android:textColor="@color/accent_teal"
                            android:textSize="28sp"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"/>

                        <ImageButton
                            android:id="@+id/btnAumentar"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_add_circle"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Aumentar quantidade"
                            app:tint="@color/brown"
                            android:scaleType="fitCenter"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Espaçamento inferior para o botão flutuante -->
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Botão Adicionar ao Carrinho Fixo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="24dp"
        android:background="@color/white"
        android:elevation="8dp">

        <!-- Preço Total -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PREÇO TOTAL"
                android:textColor="@color/empty_state"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_bold"
                android:letterSpacing="0.05"/>

            <TextView
                android:id="@+id/txtPrecoTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 6,00"
                android:textColor="@color/dark_green"
                android:textSize="24sp"
                android:fontFamily="@font/poppins_bold"
                android:letterSpacing="-0.01"/>

        </LinearLayout>

        <!-- Botão Adicionar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdicionarCarrinho"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1.2"
            android:layout_marginStart="16dp"
            android:text="ADICIONAR"
            android:textColor="@color/text_beige"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_bold"
            android:letterSpacing="-0.01"
            app:icon="@drawable/ic_shopping_cart"
            app:iconGravity="textStart"
            app:iconTint="@color/text_beige"
            app:backgroundTint="@color/dark_green"
            app:cornerRadius="16dp"
            app:elevation="4dp"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>